signature read
  leaf
  input filename {filename}
  input req {req}
  output char {char}

implementation read
  leaf
  own filename
  own contents
  own index
  handler λ(message)
    • «filename»
        λjs (message) {
	    me.filename = message.data;
	    me.contents = fs.readFileSync (me.filename, 'utf8');
	    me.cindex = 0;
	}
    • «req»
       [ λjs {me.eof ()}
         | yes: conclude
         | no: send «char» λjs {me.nextChar ()}
       ]
